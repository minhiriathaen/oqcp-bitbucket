{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/node_modules/**",
    "!**/__mocks__/**"
  ],
  "modulePathIgnorePatterns": [
    "__tests__"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "clover"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 10,
      "functions": 25,
      "lines": 25,
      "statements": -10
    }
  },
  "reporters": [
    "default",
    "jest-junit"
  ]
}
